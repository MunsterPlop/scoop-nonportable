{
    "version": "0.51.0",
    "description": "System utilities to maximize productivity.",
    "homepage": "https://github.com/microsoft/PowerToys",
    "license": "MIT",
    "depends": "dotnet-sdk",
    "architecture": {
        "64bit": {
            "url": "https://github.com/microsoft/PowerToys/releases/download/v0.51.0/PowerToysSetup-0.51.0-x64.exe#/setup.exe",
            "hash": "d815fa165a39ade56848e2adc5a21ad8b2f639d6fd075b60120e10bcc9df1bac"
        }
    },
    "installer": {
        "args": "--silent"
    },
    "uninstaller": {
        "script": [
            "$uninstall_string = $(((Get-ItemProperty -Path HKLM:\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\Uninstall\\* | Where-Object {$_.DisplayName -eq \"PowerToys (Preview)\"} | Select-Object -Expand UninstallString) -replace '/I','/x')+ ' /qn')",
            "$argument_index = $uninstall_string.IndexOf('.exe') + 5",
            "Start-Process -Wait \"$($uninstall_string.Substring(0, $argument_index))\" \"$($uninstall_string.Substring($argument_index))\" -Verb RunAs"
        ]
    },
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/microsoft/PowerToys/releases/download/v$version/PowerToysSetup-$version-x64.exe#/setup.exe"
            }
        }
    }
}
